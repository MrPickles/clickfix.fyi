<header class="header">
  <div class="container header-content">
    <a href="/" class="logo">
      <span class="logo-accent">Click</span>Fix<span class="logo-tld">.fyi</span>
    </a>
    <nav class="nav">
      <a href="/about" class="nav-link">About</a>
      <a href="/how-it-works" class="nav-link">How it Works</a>
      <a href="/news" class="nav-link">News</a>
      <a href="/demo" class="btn btn-primary">Try Demo</a>
    </nav>
  </div>
</header>

<style>
  .header {
    background: white;
    border-bottom: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  .header-content {
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .logo {
    font-size: 1.25rem;
    font-weight: 800;
    text-decoration: none;
    color: var(--text-color);
  }
  .logo-accent {
    color: var(--accent-color);
  }
  .logo-tld {
    opacity: 0.5;
    font-weight: 400;
  }
  .nav {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  .nav-link {
    font-weight: 500;
    color: var(--text-color);
    text-decoration: none;
    font-size: 0.95rem;
    opacity: 0.7;
  }
  .nav-link:hover {
    opacity: 1;
    color: var(--accent-color);
  }
  @media (max-width: 768px) {
    .nav {
      display: none;
    }
  }
</style>
