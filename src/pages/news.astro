---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import NewsComponent from "../components/News.astro";
---

<Layout title="Latest ClickFix News & Alerts | ClickFix.fyi">
	<Header />

	<main class="container section">
		<h1>Recent Alerts & News</h1>
		<p>
			Stay informed about the latest campaigns and variations of the
			ClickFix scam observed in the wild.
		</p>

		<div style="margin-top: 3rem;">
			<NewsComponent />
		</div>


	</main>
</Layout>

<style>
	.resource-list {
		list-style: none;
		padding: 0;
	}
	.resource-list li {
		margin-bottom: 1.5rem;
	}
	.resource-list a {
		color: var(--accent-color);
		text-decoration: none;
		display: block;
	}
	.resource-list a:hover {
		text-decoration: underline;
	}
	.resource-list strong {
		display: block;
		color: var(--text-color);
		margin-bottom: 0.25rem;
	}
</style>
